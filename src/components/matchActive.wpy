<script>
  import wepy from 'wepy';
  import {
    api_addPlayer,
    api_cancelPlayer,
    api_getMatchInfo
  } from '../common/api'
  export default class MatchActive extends wepy.component {
    props = {
      matchInfo: {
        type: Object,
        default: {},
        twoWay: true,
      },
      mode: {
        type: String,
        default: null
      }
    }
    onLoad() {}
    methods = {
      mocksignup() {
        let gameid = this.matchInfo.id
        let mockPlayer = [
          'oqYfD5AUZpHMgDJIQmLBVvpuRrcI',
          'oqYfD5Pc2w6JZ8LAjn_q0v0LlsnM',
          'oqYfD5MWtf7h6PPuiAHwHLsIM4xg',
          'oqYfD5EjWKLCHFyudaDd0BXmbuGs',
          'oqYfD5ONxBHn6MwLqGpjR_-D-mo0',
          'oqYfD5AxKyd5BGjbwCvaCTiQBxS8',
          'oqYfD5FZ--9vRWdr5HOeUyBd40Rg',
          'oqYfD5NddYaRRUIbPSxsokW8_5so',
          'oqYfD5HTASKhU6I1N9is56Rt5l7U',
          'oqYfD5LCSKgBcC6194TKZ8a1J4o0',
          'oqYfD5NGl-SR2Eh9pjuCLY0r_P9I',
          'oqYfD5OW_Nv5U70uu14s9GRECnHs',
          'oqYfD5Ewm_D9VSXEe3w_bcAKUnUI',
          'oqYfD5CCDrI6WevDeabpr7Cl8kwY',
          'oqYfD5FpMU0IoVxWvXf5tBFYrseQ',
          'oqYfD5OHYg4WtUFQDyTci0XYY-L0',
          'oqYfD5EEMijsLzC46aU1f5tQ6vmc',
        ]
        mockPlayer.forEach((token) => {
          api_addPlayer({
            gameid: gameid,
            token: token,
          })
        })
      },
      async signup(token) {
        let gameid = this.matchInfo.id
        let res = await api_addPlayer({
          gameid: gameid,
          // token: token,
        })
        if (res) {
          this.matchInfo = await api_getMatchInfo(gameid)
          this.$apply()
          wx.showToast({
            title: '报名成功',
            icon: 'success',
            duration: 1500
          })
        } else {
          wx.showToast({
            title: '报名失败',
            duratuin: 1500
          })
        }
      },
      async signout() {
        let gameid = this.matchInfo.id
        let res = await api_cancelPlayer({
          gameid: gameid
        })
        if (res) {
          this.matchInfo = await api_getMatchInfo(gameid)
          this.$apply()
          wx.showToast({
            title: '取消报名成功',
            icon: 'success',
            duration: 1500
          })
        } else {
          wx.showToast({
            title: '取消报名失败',
            duratuin: 1500
          })
        }
      },
      goToIndex() {
        wx.switchTab({
          url: '/pages/index/index'
        })
      },
      goToLive(e) {
        wx.navigateTo({
          url: `/pages/live/live?gameid=${this.matchInfo.id}`
        })
      }
    }
  }
</script>

